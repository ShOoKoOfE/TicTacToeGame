<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.shokoofeadeli.tictactoegame.MainActivity">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="495dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="8dip"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/textView1"
        style="@style/PlayerTextStyle"
        android:text="Player1"/>

      <ImageView
        android:id="@+id/imgPlayer1"
        style="@style/PlayerImageStyle"
        android:src="@drawable/o_icon"/>

      <TextView
        android:id="@+id/txtCounterPalyerOneWin"
        style="@style/ScoreTextStyle"/>

      <LinearLayout
        android:layout_width="0dip"
        android:layout_height="64dip"
        android:layout_weight="0.5">
      </LinearLayout>

      <TextView
        android:id="@+id/txtCounterPalyerTwoWin"
        style="@style/ScoreTextStyle"/>

      <ImageView
        android:id="@+id/imgPlayer2"
        style="@style/PlayerImageStyle"
        android:src="@drawable/x_icon"
        android:visibility="invisible"/>

      <TextView
        android:id="@+id/textView2"
        style="@style/PlayerTextStyle"
        android:text="Player2"/>

    </LinearLayout>

    <LinearLayout
      style="@style/LinearImageStyle">

      <ImageView
        android:id="@+id/img1"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="4dip"/>

      <ImageView
        android:id="@+id/img2"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"/>

      <ImageView
        android:id="@+id/img3"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"/>

    </LinearLayout>

    <LinearLayout
      style="@style/LinearImageStyle">

      <ImageView
        android:id="@+id/img4"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="4dip"/>

      <ImageView
        android:id="@+id/img5"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"/>

      <ImageView
        android:id="@+id/img6"
        style="@style/ImageViewStyle"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"/>

    </LinearLayout>

    <LinearLayout
      style="@style/LinearImageStyle">

      <ImageView
        android:id="@+id/img7"
        style="@style/ImageViewStyle"
        android:layout_marginRight="4dip"/>

      <ImageView
        android:id="@+id/img8"
        style="@style/ImageViewStyle"/>

      <ImageView
        android:id="@+id/img9"
        style="@style/ImageViewStyle"
        android:layout_marginLeft="4dip"/>

    </LinearLayout>

  </LinearLayout>

</android.support.constraint.ConstraintLayout>
